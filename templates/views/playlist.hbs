<div class="container">
  <h1>Наш плейлист</h1>
  {{#if songs}}
  {{!-- TODO: embed player for songs --}}
  <div class="col-sm-6 col-md-4">
    {{> jplayer}}
  </div>
  <div class="col-sm-6 col-md-offset-2">
    <ul>
      {{# each songs}}
        <li>{{singer}} - {{name~}}
          {{~# if album}}
            [{{album}}]
          {{~/if~}}
          {{~# if year~}}
            , {{year}}
          {{~/if~}}
        </li>
      {{/each}}
    </ul>
  </div>
  {{else}}
    <p>
      ... ждет появления первых песен ...
    </p>
  {{/if}}
</div>
